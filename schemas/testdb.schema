## test_foreign_key.py

A = entity(
    id = ordered_unique(int),
    desc = ordered(str),
)

B = entity(
    id = ordered_unique(int),
    A_id = A.id,
)

C = entity(
    id     = hashed_unique(str),
    par_id = optional(str),
    B_id   = B.id,
)

# self-referential
C.foreign_key(
    cascade,
    ['par_id'], [C.id],
)

